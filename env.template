# Configuração do ia-service

# Porta do serviço
PORT=3005

# Chave da API OpenAI (substitua pela sua chave real)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Configuração do Redis (para filas)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuração de CORS
ALLOWED_ORIGINS=http://localhost:3000,https://eduflow.example.com

# Configuração de JWT (se necessário)
JWT_SECRET=your-jwt-secret-here

# Configuração de API Key (para serviços internos)
API_KEY=your-internal-api-key-here

# Configuração de logs
LOG_LEVEL=info

# Configuração de métricas
METRICS_ENABLED=true
